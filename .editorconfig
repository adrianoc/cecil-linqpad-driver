root = true

[*]
charset = utf-8
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{xml,config,json,targets}]
indent_size = 2

[*.{vbproj,csproj,resx}]
charset = unset
insert_final_newline = unset
indent_size = 2

[*.sln]
charset = unset
insert_final_newline = unset
indent_style = unset
indent_size = unset
trim_trailing_whitespace = unset
